# CampusCard Application - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URL=jdbc:postgresql://localhost:5432/campuscard
DB_USERNAME=campuscard_user
DB_PASSWORD=campuscard_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a secure secret key using: openssl rand -hex 32
# Or online tool: https://www.random.org/cgi-bin/randbyte?nbytes=32&format=h
JWT_SECRET=your-secure-jwt-secret-key-here-minimum-256-bits
JWT_EXPIRATION_MS=86400000

# =============================================================================
# MINIO OBJECT STORAGE CONFIGURATION
# =============================================================================
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=uploads

# =============================================================================
# ADMIN USER INITIALIZATION
# =============================================================================
# Initial admin user created on first startup
ADMIN_EMAIL=admin@eng.psu.edu.eg
ADMIN_PASSWORD=change-this-secure-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_NATIONAL_ID=30000000000000
ADMIN_FACULTY_ID=1
ADMIN_DEPARTMENT_ID=1

# =============================================================================
# EMAIL CONFIGURATION (Production)
# =============================================================================
# Configure these for email verification and notifications
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Frontend URL for email verification links
FRONTEND_URL=http://localhost:3000

# Testing mode (true for development, false for production)
# When true: Returns email verification token in API response
# When false: Only sends email
TESTING_MODE=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://campuscard.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Maximum login attempts per time window
RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15

# Maximum signup attempts per time window
RATE_LIMIT_SIGNUP_MAX_ATTEMPTS=3
RATE_LIMIT_SIGNUP_WINDOW_MINUTES=60
